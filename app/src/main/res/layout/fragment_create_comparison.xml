<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="dev.jakal.pandemicwatch.presentation.comparison.ComparisonViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.comparison.createcomparison.CreateComparisonFragment">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/content_not_initialized"
            app:isVisible="@{viewmodel.initializing}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:src="@drawable/ic_add_24"
            app:layout_constraintBottom_toTopOf="@+id/fabCompare"
            app:layout_constraintEnd_toEndOf="parent"
            app:elevation="@dimen/elevation_default" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCompare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:src="@drawable/ic_forward_24"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:elevation="@dimen/elevation_default" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCountries"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_country"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:isVisible="@{!viewmodel.initializing}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>